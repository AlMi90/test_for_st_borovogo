		.header__logo.logo
			a.logo__href(href='#')
				img.logo__img(src='images/logo__img.png')
		button.hamburger-button.hamburger-button_htx
			span toggle menu
		ul.header__nav.nav
			li.nav__li.active
				a.nav__link О компании
			li.nav__li
				a.nav__link Каталог
			li.nav__li
				a.nav__link Партнерам
			li.nav__li
				a.nav__link Контакты
			li.nav__li.nav__li-serch.serch
				form(method='get' action='')
